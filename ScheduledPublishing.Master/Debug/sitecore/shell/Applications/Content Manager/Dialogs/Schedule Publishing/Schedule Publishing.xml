<?xml version="1.0" encoding="utf-8" ?>
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
  
  <SchedulePublishing>
    <FormDialog Icon="Network/32x32/earth_time.png" Header="Publishing Settings"
      Text="Configure when the current item is published.">

      <CodeBeside Type="ScheduledPublishing.sitecore.shell.Applications.ContentManager.Dialogs.SchedulePublishingDialog,ScheduledPublishing"/>
      
      <GridPanel Width="100%" Height="100%" Fixed="true">
          
            <Border Padding="8px 8px 4px 8px">
              <Literal Text="Set the publication date of the current item. This affects every version in every language."/><br />
              <Literal ID="ServerTime" />
            </Border>
            <Border ID="PublishPanel">
              <GridPanel Width="100%" Columns="1" CellPadding="0">
                <Border Padding="8px">
                  <Groupbox ID="ExistingSchedulesPanel" Header="Existing Schedules">
                    <Border ID="ExistingSchedules" Padding="4px" Width="100%" />
                  </Groupbox>
                </Border>
                <Border GridPanel.NoWrap="true">
                  <Literal ID="PublishTimeLit"/>
                </Border>
                <DateTimePicker ID="PublishDateTime" Width="100%" GridPanel.Width="100%"/>
              </GridPanel>
            </Border>

        <Scrollbox ID="SettingsPane" Border="none" Background="transparent">
          <Groupbox ID="PublishingPanel" Header="Publishing" Margin="0px 0px 16px 0px">
            <Border Padding="4">
              <Radiobutton ID="SmartPublish" Name="PublishMode" Header="Smart publish - Publish Differences Between Source and Target Database." Value="SmartPublish" Checked="true"/>
              <br/>
              <Radiobutton ID="Republish" Name="PublishMode" Header="Republish - Publish Everything." Value="Republish"/>

              <Border ID="PublishChildrenPane">
                <Checkbox ID="PublishChildren" Header="Publish Subitems"/>
              </Border>
            </Border>
          </Groupbox>

          <Groupbox ID="LanguagesPanel" Header="Publish Language" Margin="0px 0px 16px 0px">
            <Border Padding="4" ID="Languages"/>
          </Groupbox>

          <Groupbox ID="PublishingTargetsPanel" Header="Publishing Targets">
            <Border Padding="4" ID="PublishingTargets"/>
          </Groupbox>
        </Scrollbox>
          
      </GridPanel>

    </FormDialog>
  </SchedulePublishing>
</control>