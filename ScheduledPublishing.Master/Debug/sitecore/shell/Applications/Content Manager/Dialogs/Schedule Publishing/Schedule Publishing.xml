<?xml version="1.0" encoding="utf-8" ?>
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
  <SchedulePublishing>
    <FormDialog Icon="Network/32x32/earth_time.png" Header="Publishing Settings"
      Text="Configure when the current item is published.">

      <CodeBeside Type="ScheduledPublishing.sitecore.shell.Applications.ContentManager.Dialogs.SchedulePublishingDialog,ScheduledPublishing"/>

      <GridPanel Width="100%" Height="100%" Fixed="true">

        <Tabstrip ID="Tabs" Height="100%" Width="100%" GridPanel.Height="100%">
          
          <Tab ID="ScheduleItemTab" Header="Schedule Item" Height="100%">
            <Border Padding="8px 8px 4px 8px">
              <Literal Text="Set the publication date of the current item. This affects every version in every language."/>
            </Border>
            <Border ID="PublishPanel">
              <GridPanel Width="100%" Columns="1" CellPadding="0">
                <Border Padding="8px">
                  <Groupbox ID="ExistingSchedulesPanel" Header="Existing Schedules">
                    <Border ID="ExistingSchedules" Padding="4px" Width="100%" />
                  </Groupbox>
                </Border>
                <Border GridPanel.NoWrap="true">
                  <Literal Text="Publish Time:"/>
                </Border>
                <DateTimePicker ID="PublishDateTime" Width="100%" GridPanel.Width="100%"/>
              </GridPanel>
            </Border>
          </Tab>
          
          <Tab ID="AllSchedulesTab" Header="View All Schedules">
            <Scrollbox ID="AllSchedules" Height="100%" Border="none" Padding="" GridPanel.Height="100%"/>
          </Tab>
          
        </Tabstrip>
      </GridPanel>

    </FormDialog>
  </SchedulePublishing>
</control>