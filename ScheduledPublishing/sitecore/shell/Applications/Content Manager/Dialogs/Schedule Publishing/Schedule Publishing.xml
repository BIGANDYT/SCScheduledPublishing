<?xml version="1.0" encoding="utf-8" ?>
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
  <SchedulePublishing>
    <FormDialog Icon="Network/32x32/earth_time.png" Header="Scheduled Publish" Text="Configure when the current item is scheduled for publish.">
      <CodeBeside Type="ScheduledPublishing.sitecore.shell.Applications.ContentManager.Dialogs.SchedulePublishingDialog,ScheduledPublishing"/>
      <GridPanel Width="100%" Height="100%" Fixed="true">
        <Groupbox Header="Help" Margin="0px 0px 16px 0px">
          <Border Padding="4">
            <Literal Text="Idea. We can add link to documentation here"/>
          </Border>
        </Groupbox>
        <Groupbox Header="Existing Schedules" Margin="0px 0px 16px 0px">
          <Border ID="ExistingSchedules" Padding="4px" Width="100%" />
        </Groupbox>
        <Groupbox Header="Scheduled Publish Settings" Margin="0px 0px 16px 0px">
          <Border Padding="4">
            <Border GridPanel.NoWrap="true" Margin="6px 0px 15px 0px">
              <Literal ID="ServerTime" />
            </Border>
            <Border GridPanel.NoWrap="true" Margin="0px 0px 15px 0px">
              <Literal ID="PublishTimeLit"/>
              <DateTimePicker ID="PublishDateTimePicker" Width="100%" GridPanel.Width="100%"/>
            </Border>
            <Border ID="PublishModePanel">
              <Radiobutton ID="SmartPublish" Name="PublishMode" Header="Smart publish - Publish Differences Between Source and Target Database." Value="SmartPublish" />
              <br/>
              <Radiobutton ID="Republish" Name="PublishMode" Header="Republish - Publish Everything." Value="Republish"/>
              <br />
              <Checkbox ID="PublishChildren" Header="Publish Subitems"/>
            </Border>
          </Border>
        </Groupbox>
        <Groupbox Header="Scheduled Publish Language" Margin="0px 0px 16px 0px">
          <Border Padding="4" ID="Languages"/>
        </Groupbox>
        <Groupbox Header="Scheduled Publish Targets" Margin="0px 0px 16px 0px">
          <Border Padding="4" ID="PublishingTargets"/>
        </Groupbox>
      </GridPanel>
    </FormDialog>
  </SchedulePublishing>
</control>